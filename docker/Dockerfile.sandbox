FROM python:3.11-slim

# Install common Python packages for agent tasks
RUN pip install --no-cache-dir \
    numpy \
    pandas \
    scipy \
    sympy \
    requests \
    beautifulsoup4 \
    # For GAIA/benchmark tasks
    datasets \
    huggingface_hub \
    pillow \
    PyPDF2 \
    python-docx \
    openpyxl \
    lxml \
    httpx

# Set working directory
WORKDIR /workspace

# Default command
CMD ["python", "--version"]
